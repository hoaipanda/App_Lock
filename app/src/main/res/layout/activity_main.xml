<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2c20c0c"
    tools:context=".activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imReset"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:padding="13dp"
                android:src="@drawable/reset" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Draw your password"
        android:textColor="#fff"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvDraw">

        <com.takwolf.android.lock9.Lock9View
            android:id="@+id/lock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:lock9_autoLink="true"
            app:lock9_enableVibrate="true"
            app:lock9_lineColor="#b3ffffff"
            app:lock9_lineWidth="7dp"
            app:lock9_nodeAreaExpand="24dp"
            app:lock9_nodeOnAnim="@anim/node_on_2"
            app:lock9_nodeOnSrc="@drawable/watermelon_select"
            app:lock9_nodeSize="30dp"
            app:lock9_nodeSrc="@drawable/watermelon"
            app:lock9_vibrateTime="20" />
        <com.takwolf.android.lock9.Lock9View
            android:id="@+id/lock2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:lock9_autoLink="true"
            app:lock9_enableVibrate="true"
            app:lock9_lineColor="#b3ffffff"
            app:lock9_lineWidth="7dp"
            app:lock9_nodeAreaExpand="24dp"
            app:lock9_nodeOnAnim="@anim/node_on_2"
            app:lock9_nodeOnSrc="@drawable/watermelon_select"
            app:lock9_nodeSize="30dp"
            app:lock9_nodeSrc="@drawable/watermelon"
            app:lock9_vibrateTime="20" />

    </FrameLayout>

</RelativeLayout>